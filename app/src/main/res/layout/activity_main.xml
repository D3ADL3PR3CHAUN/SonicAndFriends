<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    tools:context="mcgee.sonicandfriends.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnTL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="0dp"
            android:background="@drawable/chaosemeralds"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnTM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="0dp"
            android:background="@drawable/chaosemeralds"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnTR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="0dp"
            android:background="@drawable/chaosemeralds"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnML"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="0dp"
            android:background="@drawable/chaosemeralds"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnMM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="0dp"
            android:background="@drawable/chaosemeralds"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnMR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="0dp"
            android:background="@drawable/chaosemeralds"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnBL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="0dp"
            android:background="@drawable/chaosemeralds"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnBM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="0dp"
            android:background="@drawable/chaosemeralds"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnBR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="0dp"
            android:background="@drawable/chaosemeralds"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="3"
        android:layout_weight="1">

        <TextView
            android:id="@+id/sonicTV"
            android:text="@string/sonicScoreTV"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

        <TextView
            android:id="@+id/tailsTV"
            android:text="@string/tailsScoreTV"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="3"
        android:layout_weight="1">

    <Button
        android:id="@+id/btnRESET"
        android:text="@string/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:onClick="reset"/>

    <Button
        android:id="@+id/btnRESETSCORE"
        android:text="@string/reset_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:onClick="resetscore"/>

    </LinearLayout>

</LinearLayout>
